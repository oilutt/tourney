<resources>

    <!--BUTTON STYLES-->

    <style name="buttonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:height">46dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="whiteButton" parent="buttonStyle">
        <item name="android:background">@drawable/background_button_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="facebookButton" parent="buttonStyle">
        <item name="android:background">@drawable/background_button_facebook</item>
        <item name="android:textColor">@color/white</item>
        <item name="spinning_bar_width">4dp</item>
        <item name="spinning_bar_color">@color/white</item>
        <item name="spinning_bar_padding">8dp</item>
    </style>

    <style name="googleButton" parent="buttonStyle">
        <item name="android:background">@drawable/background_button_google</item>
        <item name="android:textColor">@color/white</item>
        <item name="spinning_bar_width">4dp</item>
        <item name="spinning_bar_color">@color/white</item>
        <item name="spinning_bar_padding">8dp</item>
    </style>

    <style name="signUpButton" parent="buttonStyle">
        <item name="android:background">@drawable/background_button_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="loginButton" parent="buttonStyle">
        <item name="android:background">@drawable/background_button_login</item>
        <item name="android:textColor">@color/textBtnLoginColor</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="spinning_bar_width">4dp</item>
        <item name="spinning_bar_color">@color/textBtnLoginColor</item>
        <item name="spinning_bar_padding">8dp</item>
    </style>

    <!-- EDITEXT STYLES-->

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="hintTextAppearance">@style/hintText</item>
        <item name="errorTextAppearance">@style/errorText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
    </style>

    <style name="editTextLogin" parent="editText">
        <item name="android:background">@drawable/background_edit_text_login</item>
    </style>

    <style name="errorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="hintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/hintColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- OUTROS-->

    <style name="progressIndeterminate" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimaryVariant</item>
    </style>

</resources>
